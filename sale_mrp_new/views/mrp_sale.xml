<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="sale_order_form_mrp_new" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.mrp.new</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="sale_mrp_count" type="object" icon="fa-wrench">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="sale_count"/></span>
                        <span class="o_stat_text">Manufacturing</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</data></odoo> 